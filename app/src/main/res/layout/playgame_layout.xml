<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:id="@+id/question"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintEnd_toStartOf="@+id/answer" android:layout_marginEnd="8dp"
            android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="30sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:id="@+id/answer"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/score"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/question"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.348"
            android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="30sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/score"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toEndOf="@+id/answer"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            android:textAppearance="?android:attr/textAppearanceLarge" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/timerView" android:textSize="30sp"/>


    <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/timerView"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="66dp"/>
    <GridView
            android:id="@+id/gridview"
            android:layout_width="0dp"
            android:layout_height="660dp"
            android:columnWidth="90dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:stretchMode="columnWidth"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="200dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
</android.support.constraint.ConstraintLayout>