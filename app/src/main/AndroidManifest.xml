<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.mathkids.sligamer.mathkids">

    <application
        android:hardwareAccelerated="false"
        android:largeHeap="true"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Additional Activity Screens -->
        <activity android:name=".GamePlayActivity">
        </activity>
        <activity android:name=".SelectLevelActivity">
        </activity>
        <activity android:name=".ScoresActivity">
        </activity>

    </application>
    <!-- Permissions needed to store sql light -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>